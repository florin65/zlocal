                 --with-nss-includes=/usr/include/nss/   \
                 --enable-nss"                           \
                 ""                                      \
                 "for MSN & GoogleTalk support (say 'n' to gnutls)" \
                 "y"

optional_depends gnutls \
                 "--disable-nss --enable-gnutls=yes" \
                 "--enable-gnutls=no" \
                 "for MSN & GoogleTalk support (say 'y' here if you said 'n' to nss)" \
                 "n"

